{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

<br />

<div class="row col-xs-4 col-xs-offset-4 thumbnail forum-box color-dark" style="padding:10px; margin-bottom:0px; background-color:#486aad; color:white;">
    {% if path('fos_user_change_password') %} <h3>Modification mot de passe</h3>{% endif %}
    
{{ form_start(form, { 'action': path('fos_user_user_password', {'id' : app.user.id}), 'attr': { 'class': 'fos_user_user_password' } }) }}
    {{ form_widget(form) }}
    <div>
        <input class="btn btn-default" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
</div>