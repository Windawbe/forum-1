{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{{form_start(form, {'method': 'POST', 'attr':{'class': 'register'}})}}
<div class="form-group">
    <div class="row col-xs-4 col-xs-offset-4">
         <h1>Inscription</h1>
    </div>
    <div class="row">
        <div class="form-group row col-xs-4 col-xs-offset-4">
            <!--{{ form_label(form.username) }} -->
            {{ form_widget(form.username, {'attr': {'placeholder': 'form.username'}}) }}
        </div>
        {{ form_errors(form.username) }}
    </div>
    <div class="row no-padding">
        <div class="form-group row col-xs-4 col-xs-offset-4">
            <!--{{ form_label(form.email) }} -->
            {{ form_widget(form.email, {'attr': {'placeholder': 'form.email'}}) }}
        </div>
        {{ form_errors(form.email) }}
    </div>
    <div class="row no-padding">
        <div class="form-group row col-xs-4 col-xs-offset-4">
            <!-- {{ form_label(form.plainPassword.first) }} -->
            {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'form.password'}}) }}
        </div>
        {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="row no-padding">
        <div class="form-group row col-xs-4 col-xs-offset-4">
            <!-- {{ form_label(form.plainPassword.second) }} -->
            {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'form.password_confirmation'}}) }}
        </div>
        {{ form_errors(form.plainPassword.second) }}
    </div>
    <div align="center" class="button-wrap">
        <button class="btn btn-default btn-large waves-effect waves-light" type="submit" name="action">
            {{ 'registration.submit'|trans }}
            <i class="material-icons"></i>
        </button>
    </div>
</div>
{{ form_end(form) }}


